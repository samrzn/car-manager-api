{
  "name": "car-manager-api",
  "version": "1.0.0",
  "description": "API para controle de utilização de automóveis (teste técnico).",
  "main": "src/app/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app/app.js",
    "start": "node src/app/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "migration:run": "typeorm migration:run -d src/app/config/data-source.js",
    "migration:revert": "typeorm migration:revert -d src/app/config/data-source.js",
    "migration:show": "typeorm migration:show -d src/app/config/data-source.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write"
  },
  "keywords": [
    "node",
    "express",
    "typeorm",
    "postgresql",
    "clean-code",
    "solid"
  ],
  "author": "Samuel Rezende",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
